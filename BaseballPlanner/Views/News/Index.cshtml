@model IEnumerable<News>
@inject IViewLocalizer _localizer

<h2>@_localizer[NewsStrings.NS_CAPTION_INDEX]</h2>

@if (Model.Count() > 0)
{
    <div class="container-fluid">
        <div class="row">
            <table class="table table-bordred table-striped">
                <thead>
                    <tr>
                        <th>@_localizer[NewsStrings.NS_CAPTION_COL_CONTENT]</th>
                        <th>@_localizer[NewsStrings.NS_CAPTION_COL_CREATED]</th>
                        <th>@_localizer[NewsStrings.NS_CAPTION_COL_UPDATED]</th>
                        <th></th>
                        <th></th>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a asp-controller="News"
                                   asp-action="Edit"
                                   asp-route-id="@item.Id">@item.Content</a>
                            </td>
                            <td>@item.Created</td>
                            <td>@item.Modified</td>
                            <td>
                                <a asp-controller="News"
                                   asp-action="Edit"
                                   asp-route-id="@item.Id"><i class="fas fa-pencil-alt"></i></a>
                            </td>
                            <td>
                                <a asp-controller="News"
                                   asp-action="Delete"
                                   asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <p>@_localizer[NewsStrings.NS_NO_ENTRIES]</p>
}

<a class="btn btn-primary"
   role="button"
   asp-controller="News"
   asp-action="Add"><i class="fas fa-plus"></i>&nbsp;@_localizer[NewsStrings.NS_ADD_ENTRY]</a>