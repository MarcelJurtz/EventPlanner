@model News
@inject  IViewLocalizer _localizer

<h3>@_localizer[NewsStrings.NS_CAPTION_ADD]</h3>
<form asp-action="Add" method="post" role="form">
    <div class="form-group">
        <textarea rows="5" asp-for="Content" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="@_localizer[NewsStrings.NS_BUTTON_SAVE]" />
        </div>
    </div>
</form>