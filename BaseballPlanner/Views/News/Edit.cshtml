@model News
@inject IViewLocalizer _localizer

<h2>@_localizer[NewsStrings.NS_CAPTION_EDIT]</h2>
<form asp-action="Edit" method="post" role="form">
    <div class="form-group">
        <textarea rows="5" asp-for="Content" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="@_localizer[NewsStrings.NS_BUTTON_SAVE]" />
        </div>
    </div>
</form>