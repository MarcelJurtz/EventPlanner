@model EventRoleViewModel

<h2>Aufgabenverteilung - Event</h2>

@if (Model.Roles.Count() > 0)
{
    <div class="container-fluid">
        <div class="row">
            <table class="table table-bordred table-striped">
                <thead>
                    <tr>
                        <th>Bezeichnung</th>
                        <th>Anzahl</th>
                        <th>Unterbezeichnung</th>
                        <th>Untergeordnete Anzahl</th>
                        <th>Bearbeiten</th>
                        <th>Löschen</th>
                </thead>
                <tbody>
                    @foreach (var role in Model.Roles)
                    {
                    <tr>
                        <td>@role.Designation</td>
                        <td>@role.QuantityRequired</td>
                        <td>@role.SubDesignation</td>
                        <td>@role.SubQuantityRequired</td>
                        <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit"><!--<span class="glyphicon glyphicon-pencil"></span>--><i class="fas fa-pencil-alt"></i></button></p></td>
                        <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete"><!--<span class="glyphicon glyphicon-trash"></span>--><i class="fas fa-trash-alt"></i></button></p></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <p>Keine Einträge vorhanden</p>
}

<h3>Neuen Eintrag hinzufügen</h3>
<form asp-action="Index" method="post" role="form">
    <div class="form-group">
        <label asp-for="Role.Designation" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Role.Designation" class="form-control" />
            <span asp-validation-for="Role.Designation" class="text-danger"></span>
        </div>
        <label asp-for="Role.QuantityRequired" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Role.QuantityRequired" class="form-control" />
            <span asp-validation-for="Role.QuantityRequired" class="text-danger"></span>
        </div>
        <label asp-for="Role.SubDesignation" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Role.SubDesignation" class="form-control" />
            <span asp-validation-for="Role.SubDesignation" class="text-danger"></span>
        </div>
        <label asp-for="Role.SubQuantityRequired" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Role.SubQuantityRequired" class="form-control" />
            <span asp-validation-for="Role.SubQuantityRequired" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Speichern" />
        </div>
    </div>
</form>
