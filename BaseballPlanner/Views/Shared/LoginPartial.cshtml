@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@using Planner.Extensions;

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm"
          method="post" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li><a href="#">Hallo @UserManager.GetUserName(User).ToFirstCharUpper()</a></li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Abmelden</a></li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a id="registerLink" asp-controller="Account" asp-action="Register">Registrieren</a></li>
        <li><a id="loginLink" asp-controller="Account" asp-action="Login">Abmelden</a></li>
    </ul>
}