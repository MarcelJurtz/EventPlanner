@model TeamIndexViewModel
@inject IViewLocalizer _localizer

<h2>@_localizer[TeamStrings.TM_CAPTION_INDEX]</h2>

@if (Model.Teams.Count() > 0)
{
    <div class="container-fluid">
        <div class="row">
            <table class="table table-bordred table-striped">
                <thead>
                    <tr>
                        <th>@_localizer[TeamStrings.TM_CAPTION_COL_DESIGNATION]</th>
                        <th>@_localizer[TeamStrings.TM_CAPTION_COL_MEMBERCOUNT]</th>
                        <th>@_localizer[TeamStrings.TM_CAPTION_COL_UPDATED]</th>

                        <th></th>
                        <th></th>
                </thead>
                <tbody>
                    @foreach (var item in Model.Teams)
                    {
                        <tr>
                            <td>
                                <a asp-controller="Team"
                                   asp-action="Edit"
                                   asp-route-id="@item.Id">@item.Designation</a>
                            </td>
                            <td>@item.UserCount</td>
                            <td>@item.Modified</td>
                            <td>
                                <a asp-controller="Team"
                                   asp-action="Edit"
                                   asp-route-id="@item.Id"><i class="fas fa-pencil-alt"></i></a>
                            </td>
                            <td>
                                <a asp-controller="Team"
                                   asp-action="Delete"
                                   asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <p>
        @_localizer[TeamStrings.TM_NO_ENTRIES]
    </p>
}

<a class="btn btn-primary"
   role="button"
   asp-controller="Team"
   asp-action="Add"><i class="fas fa-plus"></i>&nbsp;@_localizer[TeamStrings.TM_ENTRY_ADD]</a>