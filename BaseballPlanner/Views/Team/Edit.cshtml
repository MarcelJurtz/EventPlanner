@model TeamEditViewModel
@inject IViewLocalizer _localizer

<h2>@_localizer[TeamStrings.TM_CAPTION_EDIT]</h2>
<form asp-action="Edit" method="post" role="form">
    <div class="form-group">
        <!-- Bezeichnung -->
        <label asp-for="CurrentTeam.Designation" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="CurrentTeam.Designation" class="form-control" />
            <span asp-validation-for="CurrentTeam.Designation" class="text-danger"></span>
        </div>

        <h3>@_localizer[TeamStrings.TM_CAPTION_USERS]</h3>
        <div class="pre-scrollable border border-primary padding">
            @for (int i = 0; i < Model.AllUsers.Count(); i++)
            {
                <input asp-for="@Model.AllUsers[i].Selected" />
                <label asp-for="@Model.AllUsers[i].UserName">@Model.AllUsers[i].UserName</label>
                @Html.HiddenFor(m => m.AllUsers[i].UserId);
                <br />
            }
        </div>

    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="@_localizer[TeamStrings.TM_BUTTON_SAVE]" />
        </div>
    </div>
</form>