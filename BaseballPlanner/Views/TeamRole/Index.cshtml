@model TeamRoleViewModel

<h2>Aufgabenverteilung</h2>

<form asp-action="Index" method="post" role="form">

    @*<div asp-validation-summary="All" class="text-danger"></div>*@

    <div class="form-group">
        <label asp-for="Role.Designation" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Role.Designation" class="form-control" />
            <span asp-validation-for="Role.Designation" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Speichern" />
        </div>
    </div>
</form>

@if (Model.Roles.Count() > 0)
{
<table>
    <thead>
        <tr>
            <td>Bezeichnung</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles)
        {
            <tr><td>@role.Designation</td></tr>
        }
    </tbody>
</table>
}
else
{
    <p>Keine Einträge vorhanden</p>
}