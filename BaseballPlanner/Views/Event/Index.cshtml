@model EventListViewModel

<h2>Events</h2>

<p>Deine Teams: @String.Join(",", @Model.TeamNames)</p>

@if (Model.Events.Count() > 0)
{
    <div class="container-fluid">
        <div class="row">
            <table class="table table-bordred table-striped">
                <thead>
                    <tr>
                        <th>Bezeichnung</th>
                        <th>Ort</th>
                        <th>Start</th>
                        <th>Treffpunkt</th>
                        @*<th>Bearbeiten</th>
                        <th>Löschen</th>*@
                </thead>
                <tbody>
                    @foreach (var item in Model.Events)
                    {
                        <tr>
                            <td>
                                <a asp-controller="Event"
                                   asp-action="Participate"
                                   asp-route-id="@item.Id">@item.Designation</a>
                            </td>
                            <td>@item.Location</td>
                            <td>@item.Start</td>
                            <td>@item.MeetingLocation (@item.MeetingTime)</td>
                            @*<td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit"><!--<span class="glyphicon glyphicon-pencil"></span>--><i class="fas fa-pencil-alt"></i></button></p></td>
                            <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete"><!--<span class="glyphicon glyphicon-trash"></span>--><i class="fas fa-trash-alt"></i></button></p></td>*@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <p>Keine Einträge vorhanden</p>
}